<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>servlets.LoginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegComplete</servlet-name>
        <servlet-class>servlets.RegComplete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveNewProfil</servlet-name>
        <servlet-class>servlets.SaveNewProfil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Abmelden</servlet-name>
        <servlet-class>servlets.Abmelden</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PinnwandSpeichern</servlet-name>
        <servlet-class>servlets.PinnwandSpeichern</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFriend</servlet-name>
        <servlet-class>servlets.AddFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AAA</servlet-name>
        <servlet-class>servlets.AAA</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserBlock</servlet-name>
        <servlet-class>servlets.UserBlock</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/LoginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegComplete</servlet-name>
        <url-pattern>/RegComplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveNewProfil</servlet-name>
        <url-pattern>/SaveNewProfil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Abmelden</servlet-name>
        <url-pattern>/Abmelden</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PinnwandSpeichern</servlet-name>
        <url-pattern>/PinnwandSpeichern</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFriend</servlet-name>
        <url-pattern>/AddFriend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AAA</servlet-name>
        <url-pattern>/AAA</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserBlock</servlet-name>
        <url-pattern>/UserBlock</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
